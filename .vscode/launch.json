    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "start",
            "type": "debugpy",
            "request": "launch",
            "module": "gpt_computer_assistant.start",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",            
            "justMyCode": true
        }
    ]
}